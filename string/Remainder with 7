




class Solution{
    public:
    /*You are required to complete this method */
    int remainderWith7(string n)
    {
        //Your code here
        int rem =0;
        for(int i=0;i<n.length();i++)
        {
            rem = rem *10 + (n[i] - '0');
            rem = rem % 7;
        }
         return rem;
    }
};
