
#include <iostream>

using namespace std;



int main()
{
    
    int n;
     cout <<"Find maximum and minimum element in an array " << endl;
    cin >> n;
    int arr[n];
    int i;
    for(i=0;i<n;i++)
    {
        cin >> arr[i];
    }
    int max, min ;
    
	    max =arr[0];
	    min =99999999;
	    for(i=0; i<n; i++)
	    
	       if(arr[i] > max)
	    {
	        max = arr[i];
	    }
	    
	    for(i=0; i<n; i++)
	    
	       if(arr[i] < min)
	    { 
	        min = arr[i];
	    }
	    cout << " minimum element is " << min << endl;
	    cout << " maximum element is " << max << endl;
	    
	    
}
	   
