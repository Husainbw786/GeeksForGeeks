bool isToepliz(int A[MAX][MAX],int N,int M)
{
//Your code here
     int i,j;
     for(i=0;i<N-1;i++)
     {
         for(j=0;j<M-1;j++)
         {
             if(A[i][j] != A[i+1][j+1] )
             {
                 return 0;
             }
         }
     }
     return true;
}
