class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to sort the array into a wave-like array.
    void convertToWave(int n, vector<int>& a){
        
        // Your code here
        int i;
        int temp;
        for(i=0;i<n-1;i+=2)
        {
            
            {
           temp = a[i];
           a[i] = a[i+1];
           a[i+1] = temp;
            }
        }
        
    }
};
